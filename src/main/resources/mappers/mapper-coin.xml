<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.upbit.coin.repo.CoinRepository">

	<select id="selectAllCoins" resultType="com.upbit.coin.vo.Coin">

		SELECT COIN_NAME, PRICE, UPDATE_DATE FROM COIN

	</select>

	<select id="selectCoinbyCoinName" resultType="com.upbit.coin.vo.Coin" parameterType="com.upbit.coin.vo.Coin">

		SELECT COIN_NAME, PRICE, UPDATE_DATE FROM COIN WHERE COIN_NAME = 'ETH'

	</select>

</mapper>